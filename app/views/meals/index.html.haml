%h1 Listing meals

%table
  %thead
    %tr
      %th Name
      %th Calories
      %th Consumed At
      %th
      %th
      %th

  %tbody
    - @meals.each do |meal|
      %tr
        %td= meal.name
        %td= number_with_delimiter(meal.calories, :delimiter => ',')
        %td= meal.consumed_at
        %td= link_to 'Show', meal
        %td= link_to 'Edit', edit_meal_path(meal)
        %td= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Meal', new_meal_path
